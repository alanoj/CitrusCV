\ProvidesPackage{fontSettings}[2025/04/12 Font Settings for Resume]
\RequirePackage{lmodern}
\RequirePackage{fontspec}
\usepackage[style=solid]{fontawesome7}

% Define a single Open Sans family with several weight faces.
% Assumes the .ttf files live in assets/fonts/Open_Sans/ relative to the main .tex file.
\newfontfamily\resumeFont[
  Path      = assets/fonts/Open_Sans/, % MUST end with a slash
  Extension = .ttf,                    % file extension
  UprightFont = OpenSans-Regular,      % default face
  BoldFont    = OpenSans-Bold,         % face used by \bfseries
  FontFace    = {n}{n}{OpenSans-Regular},   % 
  FontFace    = {me}{n}{OpenSans-Medium},   % medium weight; select with \fontseries{m}
  FontFace    = {mi}{n}{OpenSans-MediumItalic},   % medium weight; select with \fontseries{m}
  FontFace    = {sb}{n}{OpenSans-SemiBold} % semibold weight; select with \fontseries{sb}
]{OpenSans-Regular}

% Convenience macros for each weight
\newcommand{\resumeFontRegular}{\resumeFont}
\newcommand{\resumeFontMedium}{\resumeFont\fontseries{me}\selectfont}
\newcommand{\resumeFontMediumItalic}{\resumeFont\fontseries{mi}\selectfont}
\newcommand{\resumeFontSemiBold}{\resumeFont\fontseries{sb}\selectfont}
\newcommand{\resumeFontBold}{\resumeFont\bfseries}
\newcommand{\textsbseries}[1]{{\resumeFontSemiBold\selectfont #1}}

% ------------------------------ Header font Options ------------------------

% Header Full Name Font Options
\newcommand{\headerFullName}[1]{\fontsize{25pt}{30pt}\selectfont\resumeFontRegular\addfontfeature{LetterSpace=10.0} #1}

% Header Contact Into Font Options
\newcommand{\headerContactInfo}[1]{\fontsize{7pt}{9pt}\selectfont\resumeFontRegular\addfontfeature{LetterSpace=10.0} #1}

% Header Position Title Font Options
\newcommand{\headerPosTitle}[1]{\fontsize{7.5pt}{9pt}\selectfont\resumeFontSemiBold\addfontfeature{LetterSpace=10.0} #1}

% Base Text Font Options
\newcommand{\baseText}[1]{\fontsize{7.5pt}{9pt}\selectfont\resumeFontRegular #1}

% ------------------------------ Section Title Font Options --------------------

% Section Title Font Options
\newcommand{\sectionTitle}[1]{%
    \par\noindent%
    \colorbox{sectionTitleBg}{%
        \parbox{\dimexpr\linewidth-2\fboxsep}{%
            \centering\fontsize{9pt}{9pt}\selectfont\resumeFontSemiBold{#1}%
        }%
    }%
    \par\vspace{0.2em}%
}

% ------------------------------ Experience Item Font Options ---------------

% Experience Company Name Font Options
\newcommand{\experienceCompanyName}[1]{\fontsize{8pt}{9pt}\selectfont\resumeFontMedium\addfontfeature{LetterSpace=2.0} #1}

% Experience Location Font Options
\newcommand{\experienceLocation}[1]{\fontsize{8pt}{9pt}\selectfont\resumeFontMedium\addfontfeature{LetterSpace=2.0} #1}

% Experience Position Font Options
\newcommand{\experiencePosition}[1]{\fontsize{7.5pt}{9pt}\selectfont\resumeFontMedium\addfontfeature{LetterSpace=2.0} #1}

% Experience Dates Font Options 
\newcommand{\experienceDates}[1]{\fontsize{7.5pt}{9pt}\selectfont\resumeFontMedium\addfontfeature{LetterSpace=2.0} \textit{#1}}

% ------------------------------ Skills Font Options ---------------

\newcommand{\skillTitle}[1]{{%
            \fontsize{7.5pt}{9pt}\selectfont
            \addfontfeature{LetterSpace=2.0}%
            \selectfont\resumeFontSemiBold #1%
        }}
\newcommand{\skillsList}[1]{{%
            \fontsize{7pt}{9pt}\selectfont
            \resumeFontSemiBold #1%
        }}

